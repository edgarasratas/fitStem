<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Accent">
        <item name="colorAccent">#5fff26</item> <!-- Whatever color you want-->
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/secondary</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="SwitchCustom" parent="Theme.AppCompat.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/secondary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#ff0000
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#95ba2d
        </item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_bg</item>
    </style>

    <style name="toggleButton" parent="Theme.AppCompat">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>



</resources>