<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/That_green_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5fff26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />


    <TextView
        android:id="@+id/mealNameInfo"
        android:layout_width="248dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:hint="custom meal"
        android:maxWidth="250dp"
        android:minWidth="150dp"
        android:minHeight="35dp"
        android:padding="5dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/mealCaloriesInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/That_green_line" />

    <TextView
        android:id="@+id/mealCaloriesInfo"
        android:layout_width="225dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_border"
        android:hint="calorie count"
        android:maxWidth="250dp"
        android:minWidth="150dp"
        android:minHeight="35dp"
        android:padding="5dp"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/ingredientListInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealNameInfo"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/ingredientListInfo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_border"
        android:hint="Ingredient List"
        android:padding="6dp"
        android:textSize="20sp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mealCaloriesInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>