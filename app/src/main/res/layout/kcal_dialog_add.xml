<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <View
        android:id="@+id/That_green_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#5fff26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customAddMealButton1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:text="custom meal 1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/customAddMealButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/That_green_line"
        android:layout_marginTop="30dp"
        android:onClick="onClickAddMeal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customAddMealButton2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:text=" custom meal 2  "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/customAddMealButton3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customAddMealButton1"
        android:layout_marginTop="20dp"
        android:onClick="onClickAddMeal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customAddMealButton3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:text=" custom meal 3  "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/customAddMealButton4"
        app:layout_constraintTop_toBottomOf="@+id/customAddMealButton2"
        android:layout_marginTop="20dp"
        android:onClick="onClickAddMeal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customAddMealButton4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:text=" custom meal 4  "
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/customAddMealButton5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customAddMealButton3"
        android:layout_marginTop="20dp"
        android:onClick="onClickAddMeal"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/customAddMealButton5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_border"
        android:clickable="true"
        android:text=" custom meal 5  "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customAddMealButton4"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:onClick="onClickAddMeal"/>

</androidx.constraintlayout.widget.ConstraintLayout>